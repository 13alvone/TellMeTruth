# .env.example — copy this to “.env” and fill in

# Your Gmail credentials
GMAIL_EMAIL=youremail@gmail.com
# Gmail App password
GMAIL_PASSWD=your_app_password

# Comma-separated senders we trust
GMAIL_DESIRED_SENDERS=someguy@gmail.com,someotherguy@icloud.com

# Where your cookies.txt will be mounted inside the container
YTDLP_COOKIES_FILE=/app/cookies.txt

# Pipeline options
INTERVAL=3600
MAX_IMAP_RETRIES=3
IMAP_RETRY_DELAY=1.0

